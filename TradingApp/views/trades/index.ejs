<%- include('../partials/header.ejs') %>
<main class="main_content">
    <div class="items">
    <% if(trades.length!=0) { trades.forEach(category=>{ %>
      
        <div class="row">
            <h2 class="text-dark"><%=category.categoryName %></h2>
            
            <% if(category.items.length===0) { %>
            
                    <p class="text-dark"> No Items to trade in this category</p>
            
            <% } else { category.items.forEach(item=>{ %>
                <div class="col-xl-4 col-lg-4 col-md-6 mb-4">
                    <div class="bg-white"><img src="<%= item.itemImage %>" alt="<%= item.itemImage %>" class="img-gallary img-fluid card-img-top">
                      <div class="p-4">
                        <h5> <a href="/trades/<%=item._id%>" class="text-dark"><%= item.itemName %></a></h5>
                        
                      </div>
                    </div>
                  </div>

           <% })} %>
        </div>  
    
    
    <% })} %>
    <div>
  </main>

  <%- include('../partials/footer.ejs') %>